<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout
    android:id="@+id/closetripview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

     <TextView     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"     
        android:textSize="12pt"
        android:layout_gravity="center_horizontal"
        android:text="Ваш рейс завершен"
        android:textColor="@color/abc_decor_view_status_guard"/>

    <TextView     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"     
        android:textSize="10pt"
        android:layout_marginTop="10pt"
        android:layout_gravity="center_horizontal"
        android:text="Чтобы получить новый рейс, подтвердите готовность к поездке"
        android:textColor="@color/abc_decor_view_status_guard"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20pt"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/goButton"
            android:text="  Готов  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:layout_gravity="left"
            android:textColor="@color/abc_decor_view_status_guard"
            android:backgroundTint="#00FF00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                "/>
        <Button
            android:id="@+id/nogoButton"
            android:text="Не готов"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginRight="20px"
            android:layout_gravity="right"           
            android:backgroundTint="#FF00"/>           
     </LinearLayout>
    <TextView     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"     
        android:textSize="10pt"
        android:layout_marginTop="10pt"
        android:layout_gravity="center_horizontal"
        android:text="Подтверждение готовности не означает получение рейса на ближайшее время"
        android:textColor="@color/abc_decor_view_status_guard"/>
 </LinearLayout>